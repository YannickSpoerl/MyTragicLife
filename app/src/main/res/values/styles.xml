<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">#000000</item>
    </style>
    <style name="AppTheme.Toolbar2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">#000000</item>
        <item name="android:maxWidth">40dp</item>
    </style>
    <style name="AppTheme.Toolbar3" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="AppTheme.ButtonLocate" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorButtonNormal">#1ea30d</item>
    </style>
</resources>
